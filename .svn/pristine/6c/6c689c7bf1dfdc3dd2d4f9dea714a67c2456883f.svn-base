package com.nagarro.utils;

public class CurrencyUtil {

	private static double USD = 0.014;
	private static double EUR = 0.012;
	private static double GBP = 0.010;
	private static double AUD = 0.019;
	private static double CAD = 0.018;
	
	public static double getExchangeRate(String curr) {
		if(curr.equals("USD"))
			return USD;
		if(curr.equals("EUR"))
			return EUR;
		if(curr.equals("GBP"))
			return GBP;
		if(curr.equals("AUD"))
			return AUD;
		if(curr.equals("CAD"))
			return CAD;
		return 1;
	}
	
}
